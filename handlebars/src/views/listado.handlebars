<div class="container m-4">
	<div class="row">
		<a href="/">Cargar producto</a>
	</div>

	<h2 class="text-center">Desaf√≠o 5 - Handlebars</h2><br>

	<div class="row">
		<div class="col-7">
			<h5>Listado de productos</h5><br>
		</div>
	</div>

	<div class="row">
		{{#if vacio}}
			<div class="alert alert-danger">No hay productos</div>
		{{else}}
			<table class="table table-dark table-responsive">
				<thead>
					<tr>
						<th scope="col">Nombre</th>
						<th scope="col">Precio</th>
						<th scope="col">Foto</th>
					</tr>
				</thead>
				<tbody>
					{{#each productos as | producto |}}
						<tr>
							<td>{{producto.title}}</td>
							<td>${{producto.price}}</td>
							<td>
								<a href="{{producto.thumbnail}}" target="_blank">
									<img src="{{producto.thumbnail}}" class="rounded img-thumbnail" style="width: 200px">
								</a>
							</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		{{/if}}
	</div>
</div>