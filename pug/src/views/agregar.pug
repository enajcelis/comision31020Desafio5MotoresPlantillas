html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
		title Desafío 5 - Pug
	body
		div(class="container m-4")
			a(href="/productos") Listado de productos

			h2(class="text-center") Desafío 5 - Pug
			br

			div(class="row")
				div(class="col-7")
					h5 Agregar producto

			div(class="row")
				form(action="/productos", method="post", class="row g-3")
					div(class="col-12")
						label(for="title", class="form-label") Nombre
						input(type="text", class="form-control", name="title", id="title", required)
					div(class="col-12")
						label(for="price", class="form-label") Precio
						div(class="input-group has-validation")
							span(class="input-group-text", id="inputGroupPrepend") $
							input(type="text", class="form-control", name="price", id="price", aria-describedby="inputGroupPrepend", required)
					div(class="col-12")
						label(for="thumbnail", class="form-label") Foto (URL) 
						input(type="url", class="form-control", name="thumbnail", id="thumbnail", required)
					div(class="col-12")
						input(type="submit", class="btn btn-primary", value="Guardar")